<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:textSize="16sp"
            android:text="@string/register_activity_input_info"
            android:textColor="@color/gray_one" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="2dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/text_RegisterFinishActivity_account"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/register_activity_account"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_RegisterFinishActivity_account"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/text_RegisterFinishActivity_account"
                android:background="@null"
                android:hint="@string/register_activity_tiaojian"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/text_RegisterFinishActivity_nick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/register_activity_nick"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_RegisterFinishActivity_nick"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/text_RegisterFinishActivity_nick"
                android:background="@null"
                android:hint="@string/register_activity_tiaojian"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/text_RegisterFinishActivity_password"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/register_activity_password"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_RegisterFinishActivity_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/text_RegisterFinishActivity_password"
                android:background="@null"
                android:hint="@string/register_activity_password_tiaojian"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/text_RegisterFinishActivity_confirmpassword"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/register_activity_confirm_password"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_RegisterFinishActivity_confirmpassword"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/text_RegisterFinishActivity_confirmpassword"
                android:background="@null"
                android:hint="@string/register_activity_again_password"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/relative_RegisterFinishActivity_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/selector_relative_confirm">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/register_activity_register"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>