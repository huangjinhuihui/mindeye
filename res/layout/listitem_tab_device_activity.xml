<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_more_item" >

    <RelativeLayout
        android:id="@+id/relative_listitem_tab_device_activity_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_main_activity_bg" >

        <ImageView
            android:id="@+id/image_listitem_tab_device_activity_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:src="@drawable/image_device_moren" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/imageView_listitem_tab_video_activity_arrow"
        android:layout_toRightOf="@+id/relative_listitem_tab_device_activity_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_listitem_tab_device_activity_devicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的摄像机"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            style="@style/wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_listitem_tab_device_activity_devicetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPC"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_listitem_tab_device_activity_deviceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(HW011xx123)"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        
        <TextView 
            android:id="@+id/text_listitem_tab_device_activity_ifonline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_listitem_tab_video_activity_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/icon_listview_arrow_right" />

</RelativeLayout>