<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_parent_vertical"
    android:background="@color/gray_two">
    
    <include
        android:id="@+id/head_wifi_activity_head" 
        layout="@layout/common_title_bar" />
    
    <RelativeLayout
        android:layout_below="@+id/head_wifi_activity_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/image_wifi_activity_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/image_tab_device_activity_nodevice"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_wifi_activity_nodevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_wifi_activity_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="@string/tab_device_activity_nodevice"
            android:textSize="18sp"
            android:textColor="@color/gray_common_tab_text"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listView_wifi_activity_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" 
            android:divider="@color/gray_line"
            android:dividerHeight="0.5dp"
            android:visibility="visible">
        </ListView>

    </RelativeLayout>
</RelativeLayout>
