<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_parent_vertical"
    android:background="@color/gray_two">
        
        <include layout="@layout/common_title_bar"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:id="@+id/relative_storage_status_activity_cloud"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:background="@drawable/selector_more_item">

                <RelativeLayout
                    android:id="@+id/relative_storage_status_activity_cloudimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_main_activity_bg" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"
                        android:src="@drawable/image_storage_cloud" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/relative_storage_status_activity_cloudimage"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_storage_status_activity_nostart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/storage_status_activity_storage_cloud"
                        android:textSize="18sp" />

                    <LinearLayout
                        style="@style/wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_storage_status_activity_nostorage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/storage_status_activity_nostorage"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/image_arrow_image" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_line" />
            
            <RelativeLayout
                android:id="@+id/relative_storage_status_activity_card"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:background="@drawable/selector_more_item">

                <RelativeLayout
                    android:id="@+id/relative_storage_status_activity_cardimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_main_activity_bg" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"
                        android:src="@drawable/image_storage_card" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/relative_storage_status_activity_cardimage"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/storage_status_activity_storagecard"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <LinearLayout
                        style="@style/wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/text_storage_status_activity_ifstorage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/storage_status_activity_nostorage"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/image_arrow_image" />
            </RelativeLayout>
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_line" />
            
        </LinearLayout>
        
</LinearLayout>
