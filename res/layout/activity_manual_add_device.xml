<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_parent_vertical"
    android:background="@color/gray_two">
    
    <include layout="@layout/common_title_bar"/>
    
    <View style="@style/fill_gray_line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/text_ManualAddDeviceAct_accout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/register_activity_account"
            android:textSize="18sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/text_ManualAddDeviceAct_accout"
            android:background="@null"
            android:hint="@string/register_activity_input_account"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/text_ManualAddDeviceAct_deviceid"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/manual_add_device_activity_deviceid"
            android:textSize="18sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/text_ManualAddDeviceAct_deviceid"
            android:background="@null"
            android:hint="@string/manual_add_device_activity_inputid"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/text_ManualAddDeviceAct_devicename"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/register_activity_device_name"
            android:textSize="18sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/text_ManualAddDeviceAct_devicename"
            android:background="@null"
            android:hint="@string/register_activity_input_device_name"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/text_ManualAddDeviceAct_longitude"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/manual_add_device_activity_longitude"
            android:textSize="18sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/text_ManualAddDeviceAct_longitude"
            android:background="@null"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/text_ManualAddDeviceAct_latitude"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/manual_add_device_activity_latitude"
            android:textSize="18sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/text_ManualAddDeviceAct_latitude"
            android:background="@null"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

</LinearLayout>
