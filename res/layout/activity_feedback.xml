<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_parent_vertical" >

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        style="@style/fill_parent_vertical"
        android:layout_margin="15dp" >

        <LinearLayout
            style="@style/fill_parent_vertical"
            android:layout_weight="3" >

            <EditText
                android:id="@+id/edit_FeedBackActivity_edit"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="top"
                android:textSize="16sp"
                android:hint="@string/feedback_activity_edit"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <LinearLayout
            style="@style/fill_parent_vertical"
            android:layout_marginTop="20dp"
            android:layout_weight="2" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/aaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/image_FeedBackActivity_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_add_photo_image" />

                        <ImageView
                            android:id="@+id/image_FeedBackActivity_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_add_photo_image" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/aaa" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/image_FeedBackActivity_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_add_photo_image" />

                        <ImageView
                            android:id="@+id/image_FeedBackActivity_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/selector_add_photo_image" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_FeedBackActivity_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_relative_confirm">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/feedback_activity_submit"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>