<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_parent_vertical"
    android:background="@color/gray_two">
    
    <include layout="@layout/common_title_bar" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:textColor="@color/gray_one"
        android:layout_marginTop="20dp"
        android:text="@string/update_device_name_activity_newname"/>

    <View style="@style/fill_gray_line_no_space" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/text_UpdateDeviceNameActivity_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/register_activity_device_name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_UpdateDeviceNameActivity_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/text_UpdateDeviceNameActivity_text"
            android:background="@null"
            android:hint="@string/update_device_name_activity_tiaojian"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />
    
    <RelativeLayout
        android:id="@+id/relative_UpdateDeviceNameActivity_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/selector_relative_confirm" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/update_password_activity_confirm"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
